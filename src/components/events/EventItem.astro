---
interface Props {
  id: string;
  imageUrl: string;
  title: string;
  date: string;
  description: string;
  links: string[];
}

const { imageUrl, title, date, description, links } = Astro.props;
---

<div class="lg:w-[720px] w-[320px] flex flex-col">
  <div
    class="w-full flex items-center justify-center lg:h-[calc(720px_*_9_/_16)] h-[calc(320px_*_9_/_16)] bg-gray-900 rounded-md"
  >
    <img
      class="w-auto h-auto max-w-full max-h-full object-cover rounded-md"
      src={imageUrl}
    />
  </div>
  <div class="flex flex-col">
    <h2 class="text-2xl font-semibold my-2">{title}</h2>
    <div class="flex flex-col space-y-2">
      <span class="text-sm text-gray-600">{date}</span>
      <span>{description}</span>
    </div>
    {
      links.filter((l) => l).length > 0 && (
        <div class="flex flex-col gap-y-1 my-2">
          <span class="font-semibold">関連リンク</span>
          {links.map((link) => (
            <a
              class="underline decoration-blue-500 text-blue-500 text-sm"
              href={link}
            >
              {link}
            </a>
          ))}
        </div>
      )
    }
  </div>
</div>
