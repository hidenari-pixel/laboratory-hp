---
import type { EmploymentResponse } from '@/types/employment';

type Props = EmploymentResponse;

const { id, companyName, companyLink } = Astro.props;
---

<div
  class="w-full flex flex-col space-y-2 py-8 rounded-md shadow-md border px-4 animate-fade-in-bottom"
>
  <span>{companyName}</span>
  <a
    class="text-blue-500 flex space-x-1 items-center"
    href={companyLink}
    target="_blank"
  >
    <img alt="external link icon" class="w-3 h-3" src="/external-link.svg" />
    <span class="text-sm"> 会社リンク</span>
  </a>
</div>
