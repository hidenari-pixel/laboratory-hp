---
import { getAbsolutePath } from '@/utils/getAbsolutePath';
import RoundedImage from '../shared/RoundedImage.astro';
interface Props {
  id: string;
  grade: string;
  name: string;
  imageUrl: string;
}

const { id, grade, name, imageUrl } = Astro.props;
---

<div class="group flex items-center space-x-10 pr-10 lg:w-[420px] w-[320px]">
  <RoundedImage imageUrl={imageUrl} size="md" />
  <div class="flex flex-col space-y-1">
    <span class="text-sm text-gray-600">{grade}</span>
    <h3 class="text-xl">{name}</h3>
    <a href={getAbsolutePath(`/member/${id}`)}>
      <div
        class="lg:opacity-0 lg:group-hover:opacity-100 h-10 text-sm transition-all duration-500 text-gray-600"
      >
        <span class="underline text-blue-400 decoration-blue-400"
          >プロフィール→</span
        >
      </div>
    </a>
  </div>
</div>
