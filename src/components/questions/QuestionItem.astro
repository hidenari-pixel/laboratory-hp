---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<div class="w-full border-b border-gray-300"></div>
<div class="w-full flex flex-col">
  <div
    id={id}
    class="w-full flex lg:flex-row flex-col lg:items-start lg:space-y-0 space-y-5 justify-between"
  >
    <h3 class="text-xl font-semibold">{title}</h3>
    <div class="lg:w-[720px] w-full">
      <slot />
    </div>
  </div>
</div>
